{
  "name": "@t-lecture/server",
  "version": "0.0.1",
  "private": true,
  "description": "T-LECTURE Backend Server",
  "main": "dist/server.js",
  "engines": {
    "node": "20.x"
  },
  "prisma": {
    "schema": "./prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "seed:users": "tsx prisma/seedUsers.ts",
    "seed:unit": "tsx prisma/seedUnits.ts",
    "seed:dashboard": "tsx prisma/seedDashboard.ts",
    "dev": "tsx watch -r newrelic src/server.ts",
    "build": "prisma generate && tsc",
    "start": "node --experimental-loader=newrelic/esm-loader.mjs dist/server.js",
    "prisma:format": "prisma format",
    "prisma:validate": "prisma validate",
    "db:push": "npm run prisma:format && npm run prisma:validate && prisma db push",
    "db:migrate:create": "npm run prisma:format && npm run prisma:validate && prisma migrate dev --create-only",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "mocha --require tsx tests/**/*.spec.js --timeout 10000 --exit",
    "test:assignments": "mocha --require tsx tests/test/assignments.integration.spec.js --timeout 10000 --exit",
    "test:auth": "mocha --require tsx tests/test/auth.integration.spec.js --timeout 10000 --exit",
    "test:distance": "mocha --require tsx tests/test/distance.integration.spec.js --timeout 10000 --exit",
    "test:instructor": "mocha --require tsx tests/test/instructor.integration.spec.js --timeout 10000 --exit",
    "test:messages": "mocha --require tsx tests/test/messages.integration.spec.js --timeout 10000 --exit",
    "test:metadata": "mocha --require tsx tests/test/metadata.integration.spec.js --timeout 10000 --exit",
    "test:units": "mocha --require tsx tests/test/units.integration.spec.js --timeout 10000 --exit",
    "test:user.admin": "mocha --require tsx tests/test/user.admin.integration.spec.js --timeout 10000 --exit",
    "test:user.me": "mocha --require tsx tests/test/user.me.integration.spec.js --timeout 10000 --exit"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@sentry/node": "^10.32.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "newrelic": "^13.9.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "readline-sync": "^1.4.10",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/newrelic": "^9.14.8",
    "@types/node": "^25.0.3",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "chai": "^6.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  }
}
